<p id="notice"><%= notice %></p>

<h1>Scholarships</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Beca base</th>
      <th>Nombre beca</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scholarships.each do |scholarship| %>
      <tr>
        <td><%= scholarship.beca_base %></td>
        <td><%= scholarship.nombre_beca %></td>
        <td><%= link_to 'Show', scholarship %></td>
        <td><%= link_to 'Edit', edit_scholarship_path(scholarship) %></td>
        <td><%= link_to 'Destroy', scholarship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Importar Becas</h3>
<%= form_tag import_scholarships_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Subir becas"%>
<%end%>

<%= link_to 'New Scholarship', new_scholarship_path %>
