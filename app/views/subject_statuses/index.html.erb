<p id="notice"><%= notice %></p>

<h1>Subject Statuses</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Status name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subject_statuses.each do |subject_status| %>
      <tr>
        <td><%= subject_status.status_name %></td>
        <td><%= link_to 'Show', subject_status %></td>
        <td><%= link_to 'Edit', edit_subject_status_path(subject_status) %></td>
        <td><%= link_to 'Destroy', subject_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject Status', new_subject_status_path %>
