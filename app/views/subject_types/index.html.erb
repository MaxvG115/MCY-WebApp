<p id="notice"><%= notice %></p>

<h1>Subject Types</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Name subject type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subject_types.each do |subject_type| %>
      <tr>
        <td><%= subject_type.name_subject_type %></td>
        <td><%= link_to 'Show', subject_type %></td>
        <td><%= link_to 'Edit', edit_subject_type_path(subject_type) %></td>
        <td><%= link_to 'Destroy', subject_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3>Importar Tipos de materia</h3>
<%= form_tag import_subject_types_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Subir Tipos de materia"%>
<%end%>

<%= link_to 'New Subject Type', new_subject_type_path %>
